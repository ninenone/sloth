{
  "name": "sloth",
  "displayName": "sloth",
  "author": {
    "name": "Sergei Lavinov",
    "email": "lsa@91.team"
  },
  "repository": {
    "url": "https://github.com/ninenone/sloth"
  },
  "publisher": "stalder",
  "description": "Configurable file templates",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:file"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.sloth",
        "title": "Run Sloth"
      },
      {
        "command": "extension.slothLocal",
        "title": "Run Sloth (Right Click Context Menu)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceScheme == file",
          "command": "extension.slothLocal"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "build": "mkdir -p build && yarn vsce package -o ./build/",
    "clean": "rm -rf",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.36.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.12.1",
    "typescript": "^3.8.1-rc",
    "vsce": "^1.73.0",
    "vscode-test": "^1.2.0"
  }
}
